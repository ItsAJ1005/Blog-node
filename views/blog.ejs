<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title><%= blog.title %></title>
</head>
<body>
    <%- include('./partials/navbar') %> 

    <div class="container mt-3">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageUrl %>" height="180vh" alt="<%= blog.title %>">
        <p class="mt-3">
            <%= blog.body %>
        </p>

        <p><b><i> Written by: <%= user.fullName %> </i></b></p>
    </div>

    <div class="container mt-3">
        <h2 class="mt-5">Comments</h2>
        <sm><%= comments.length %> people commented on this blog.</sm>

        <% if (locals.user) { %>
            <form class="container mt-4" action="/blog/comment/<%= blog._id %>" method="POST">
                <div class="mb-3">
    
                  <textarea type="text" name="content" class="form-control" id="exampleInputEmail1" placeholder="Enter your comment..." aria-describedby="emailHelp">
                    </textarea>
                </div>
        
                <button type="submit" class="btn btn-success">Comment</button>
              </form>
        <% } %>
        
    </div>

    <div class="container mt-3">
        <% comments.forEach(comment => { %>
            <div class="mb-3">
                <p><i><strong><%= comment.createdBy.fullName %></i> commented:</strong></p>
                <p><%= comment.content %></p>
            </div>
        <% }) %>
    </div>
    <%- include("./partials/script") %>
</body>
</html>
